<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="Categories">

    <!-- TODO this somehow needs a toolbar. I have no idea what I'm doing. Also hardcoded strings are bad-->
    <SwitchPreference
        android:defaultValue="true"
        android:key="catNoCat"
        android:title="[No Category]"
        android:summary="Notifications that have not been given a specific category"/>

    <SwitchPreference
        android:defaultValue="false"
        android:key="catAlarm"
        android:title="Alarms"/>

    <SwitchPreference
        android:defaultValue="false"
        android:key="catProgress"
        android:title="Background Progress"
        android:summary="Progress of long-running background operations"/>

    <SwitchPreference
        android:defaultValue="false"
        android:key="catService"
        android:title="Background Services" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="catEvent"
        android:title="Calendar Events" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="catSys"
        android:title="Device Status Updates" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="catEmail"
        android:title="Emails" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="catErr"
        android:title="Errors"
        android:summary="Background errors or authentication status"/>

    <SwitchPreference
        android:defaultValue="false"
        android:key="catTransport"
        android:title="Media Playback"
        android:summary="Media notifications that are ongoing and give play/pause/etc controls."/>

    <SwitchPreference
        android:defaultValue="true"
        android:key="catMsg"
        android:title="Messages"
        android:summary="Incoming direct message (SMS, instant message, etc.)"/>

    <SwitchPreference
        android:defaultValue="false"
        android:key="catNavigation"
        android:title="Navigation"
        android:summary="Map turn-by-turn navigation"/>

    <SwitchPreference
        android:defaultValue="true"
        android:key="catCall"
        android:title="Phone Calls" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="catPromo"
        android:title="Promotions/Advertisements" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="catRecommendation"
        android:title="Recommendations"
        android:summary="Specific recommendations from an app, such as a news article."/>

    <SwitchPreference
        android:defaultValue="true"
        android:key="catReminder"
        android:title="Reminders" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="catSocial"
        android:title="Social Media" />

</PreferenceScreen>